  .main {
    padding-bottom: 120px;
    @include column(10);
    @include push(2);
  }

  #main-container {
    //Semantic grid needs a row mixin for nested columns
    @include row(12);
  }

  .main .pagination {
    margin: 40px 0 0;
  }
}

